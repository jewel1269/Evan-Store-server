<script>
    // Get the current path
    const currentPath = window.location.pathname;

    // Object to map pathnames to link IDs
    const routes = {
        '/': 'dashboard-link',
        '/order': 'orders-link',
        '/customers': 'customers-link',
        '/products': 'products-link',
        '/settings': 'settings-link',
        '/logout': 'logout-link'
    };

    // Get the active link element based on the current path
    const activeLinkId = routes[currentPath];

    // Apply the active class to the matched route
    if (activeLinkId) {
        const activeLink = document.getElementById(activeLinkId);
        if (activeLink) {
            activeLink.classList.add('text-gray-700', 'bg-gray-200');
            activeLink.classList.remove('text-gray-400', 'hover:bg-gray-700', 'hover:text-gray-200');
        }
    }
</script>
