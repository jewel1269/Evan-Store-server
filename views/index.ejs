<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.8/index.global.min.css"
      rel="stylesheet"
    />
    <style>
      /* Custom styles for calendar height */
      #calendar {
        height: 400px;
      }
    </style>
  </head>

  <body>
    <section class="px-6 py-8 mx-auto dashboard max-w-8xl">
      <!-- Header Section -->
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold">Dashboard</h2>
        <div class="flex space-x-4">
          <button
            class="btn-nav py-2 px-4 rounded-lg text-gray-600 hover:bg-gray-100"
          >
            Last 24 hours
          </button>
          <button
            class="btn-nav py-2 px-4 rounded-lg text-gray-600 hover:bg-gray-100 bg-gray-100 font-bold"
          >
            Last Weeks
          </button>
          <button
            class="btn-nav py-2 px-4 rounded-lg text-gray-600 hover:bg-gray-100"
          >
            Last Months
          </button>
          <a
            href="https://evan-store.netlify.app/"
            class="btn-nav py-2 border-2 border-black px-4 hover:bg-green-600 hover:text-black rounded-lg text-red-600 hover:bg-gray-100"
            >Visit Website</a
          >
        </div>
      </div>

      <!-- Stats Section -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Net Income -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-lg font-bold text-gray-700">Net Income</h3>
          <p class="text-3xl font-bold text-gray-900 mt-2">BDT 20,178.00</p>
          <p class="text-sm text-green-600 mt-1">+23.5 From Last Period</p>
        </div>

        <!-- Avg Order Value -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-lg font-bold text-gray-700">Avr. Order Value</h3>
          <p class="text-3xl font-bold text-gray-900 mt-2">BDT 896.00</p>
          <p class="text-sm text-red-600 mt-1">-23.5 From Last Period</p>
        </div>

        <!-- Orders -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-lg font-bold text-gray-700">Orders</h3>
          <p class="text-3xl font-bold text-gray-900 mt-2">7,563</p>
          <p class="text-sm text-green-600 mt-1">+12.5 From Last Period</p>
        </div>
      </div>

      <!-- Overview Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Audience Graph -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-lg font-bold text-gray-700">New Audiences</h3>
          <canvas id="audienceChart" class="mt-4"></canvas>
        </div>

          <div>
            <h1 class="text-center text-2xl fond-bold mb-5">Top Releted Order</h1>
            <table class="divide-y-2 border-collapse border border-gray-500 w-full">
              <thead class="bg-gray-200">
                <tr>
                  <th class="border border-gray-400 px-4 py-2 text-left">Product Name</th>
                  <th class="border border-gray-400 px-4 py-2 text-left">Category</th>
                  <th class="border border-gray-400 px-4 py-2 text-left">Price</th>
                  <th class="border border-gray-400 px-4 py-2 text-left">Stock Status</th>
                  <th class="border border-gray-400 px-4 py-2 text-left">Description</th>
                </tr>
              </thead>
              <tbody class="divide-y">
                <tr>
                  <td class="border border-gray-400 px-4 py-2">Wireless Earbuds</td>
                  <td class="border border-gray-400 px-4 py-2">Electronics</td>
                  <td class="border border-gray-400 px-4 py-2">Tk 50</td>
                  <td class="border border-gray-400 px-4 py-2 text-green-600">In Stock</td>
                  <td class="border border-gray-400 px-4 py-2">High-quality sound with noise cancellation.</td>
                </tr>
                <tr>
                  <td class="border border-gray-400 px-4 py-2">Gaming Chair</td>
                  <td class="border border-gray-400 px-4 py-2">Furniture</td>
                  <td class="border border-gray-400 px-4 py-2">Tk 150</td>
                  <td class="border border-gray-400 px-4 py-2 text-red-600">Out of Stock</td>
                  <td class="border border-gray-400 px-4 py-2">Ergonomic design for long hours of gaming.</td>
                </tr>
                <tr>
                  <td class="border border-gray-400 px-4 py-2">Yoga Mat</td>
                  <td class="border border-gray-400 px-4 py-2">Fitness</td>
                  <td class="border border-gray-400 px-4 py-2">Tk 20</td>
                  <td class="border border-gray-400 px-4 py-2 text-green-600">In Stock</td>
                  <td class="border border-gray-400 px-4 py-2">Eco-friendly and non-slip surface.</td>
                </tr>
                <tr>
                  <td class="border border-gray-400 px-4 py-2">Smart Watch</td>
                  <td class="border border-gray-400 px-4 py-2">Electronics</td>
                  <td class="border border-gray-400 px-4 py-2">Tk 120</td>
                  <td class="border border-gray-400 px-4 py-2 text-green-600">In Stock</td>
                  <td class="border border-gray-400 px-4 py-2">Tracks fitness, sleep, and notifications.</td>
                </tr>
                <tr>
                  <td class="border border-gray-400 px-4 py-2">Desk Lamp</td>
                  <td class="border border-gray-400 px-4 py-2">Home & Living</td>
                  <td class="border border-gray-400 px-4 py-2">Tk 30</td>
                  <td class="border border-gray-400 px-4 py-2 text-green-600">In Stock</td>
                  <td class="border border-gray-400 px-4 py-2">Adjustable brightness with USB charging.</td>
                </tr>
              </tbody>
            </table>
            
            
          </div>
    
    </section>

    <!-- Load Chart.js for graphs -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Load FullCalendar for calendar integration -->
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.8/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.8/index.global.min.js"></script>

    <script>
      // Audience Chart (Bar)
      document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById("audienceChart").getContext("2d");
        var audienceChart = new Chart(ctx, {
          type: "bar",
          data: {
            labels: [
              "Aug 14",
              "Aug 15",
              "Aug 16",
              "Aug 17",
              "Aug 18",
              "Aug 19",
              "Aug 20",
            ],
            datasets: [
              {
                label: "New Audiences",
                data: [3200, 5000, 5900, 2300, 4900, 4500, 3000],
                backgroundColor: "#3B82F6",
              },
            ],
          },
          options: {},
        });

      });
    </script>
  </body>
</html>
