<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-50">
    <div class="max-w-8xl mx-auto my-10 p-8 bg-white rounded-lg shadow-lg">
      <h1 class="text-3xl font-bold text-center mb-6">Add New Product</h1>

      <!-- Product Form -->
      <form action="/product/add" method="POST" enctype="multipart/form-data">
        <!-- Product Info Section -->
        <section class="mb-6">
          <h2 class="text-xl font-semibold mb-4">Product Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="category"
                class="block text-gray-600 font-semibold mb-2"
                >Category</label
              >
              <select
                id="category"
                name="category"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                required
              >
                <option value="">Select Category</option>
                <option value="Woman_Fashion">Woman Fashion</option>
                <option value="Men_Fashion">Men Fashion</option>
                <option value="Electronics">Electronics</option>
                <option value="Home_Lifestyle">Home & Lifestyle</option>
                <option value="Babys_Toys">Babys & Toys</option>
                <option value="Groceries_Pets">Groceries & Pets</option>
                <option value="Health_Beauty">Health & Beauty</option>
              </select>
            </div>
            <div>
              <label
                for="productName"
                class="block text-gray-600 font-semibold mb-2"
                >Product Name</label
              >
              <input
                type="text"
                id="productName"
                name="productName"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                required
              />
            </div>
          </div>
        </section>

        <!-- Pricing & Discount Section -->
        <section class="mb-6">
          <h2 class="text-xl font-semibold mb-4">Pricing & Discount</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label
                for="newPrice"
                class="block text-gray-600 font-semibold mb-2"
                >New Price</label
              >
              <input
                type="number"
                id="newPrice"
                name="price[new]"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                required
              />
            </div>
            <div>
              <label
                for="oldPrice"
                class="block text-gray-600 font-semibold mb-2"
                >Old Price</label
              >
              <input
                type="number"
                id="oldPrice"
                name="price[old]"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
              />
            </div>
            <div>
              <label
                for="discount"
                class="block text-gray-600 font-semibold mb-2"
                >Discount</label
              >
              <input
                type="text"
                id="discount"
                name="discount"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
              />
            </div>
          </div>
        </section>

        <!-- Rating & Review Section -->
        <section class="mb-6">
          <h2 class="text-xl font-semibold mb-4">Rating & Reviews</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="rating" class="block text-gray-600 font-semibold mb-2"
                >Rating (0-5)</label
              >
              <input
                type="number"
                id="rating"
                name="rating"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                min="0"
                max="5"
                step="0.1"
              />
            </div>
            <div>
              <label for="review" class="block text-gray-600 font-semibold mb-2"
                >Number of Reviews</label
              >
              <input
                type="number"
                id="review"
                name="review"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
              />
            </div>
          </div>
        </section>

        <!-- Description Section -->
        <section class="mb-6">
          <label
            for="description"
            class="block text-gray-600 font-semibold mb-2"
            >Product Description</label
          >
          <textarea
            id="description"
            name="description"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
            maxlength="500"
          ></textarea>
        </section>

        <!-- Colors & Sizes Section -->
        <section class="mb-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Colors -->
            <div>
              <label class="block text-gray-600 font-semibold mb-2"
                >Colors</label
              >
              <div class="flex flex-wrap gap-4">
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="colors[]"
                    value="Red"
                    class="mr-2"
                  />
                  Red
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="colors[]"
                    value="Blue"
                    class="mr-2"
                  />
                  Blue
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="colors[]"
                    value="Green"
                    class="mr-2"
                  />
                  Green
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="colors[]"
                    value="Black"
                    class="mr-2"
                  />
                  Black
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="colors[]"
                    value="White"
                    class="mr-2"
                  />
                  White
                </label>
              </div>
            </div>

            <!-- Sizes -->
            <div>
              <label class="block text-gray-600 font-semibold mb-2"
                >Sizes</label
              >
              <div class="flex flex-wrap gap-4">
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="sizes[]"
                    value="S"
                    class="mr-2"
                  />
                  S
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="sizes[]"
                    value="M"
                    class="mr-2"
                  />
                  M
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="sizes[]"
                    value="L"
                    class="mr-2"
                  />
                  L
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="sizes[]"
                    value="XL"
                    class="mr-2"
                  />
                  XL
                </label>
                <label class="flex items-center">
                  <input
                    type="checkbox"
                    name="sizes[]"
                    value="XXL"
                    class="mr-2"
                  />
                  XXL
                </label>
              </div>
            </div>
          </div>
        </section>

        <!-- Stock & Delivery Options Section -->
        <section class="mb-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex items-center">
              <input type="checkbox" id="instock" name="instock" class="mr-2" />
              <label for="instock" class="text-gray-600 font-semibold"
                >In Stock</label
              >
            </div>
            <div class="flex items-center">
              <input
                type="checkbox"
                id="freedelivery"
                name="delivery[freedelivery]"
                class="mr-2"
              />
              <label for="freedelivery" class="text-gray-600 font-semibold"
                >Free Delivery</label
              >
            </div>
          </div>
          <label
            for="returnpolicy"
            class="block text-gray-600 font-semibold mb-2 mt-4"
            >Return Policy</label
          >
          <input
            type="text"
            id="returnpolicy"
            name="delivery[returnpolicy]"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
            value="No return policy"
          />
        </section>

        <!-- Store Info & Flags Section -->
        <section class="mb-6">
          <label for="storeName" class="block text-gray-600 font-semibold mb-2"
            >Store Name</label
          >
          <input
            type="text"
            id="storeName"
            name="storeName"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
            value="Evan Store"
          />

          <div class="flex items-center mt-4">
            <input type="checkbox" id="bestSale" name="bestSale" class="mr-2" />
            <label for="bestSale" class="text-gray-600 font-semibold"
              >Best Sale</label
            >
          </div>
          <div class="flex items-center mt-4">
            <input
              type="checkbox"
              id="NewArrival"
              name="NewArrival"
              class="mr-2"
            />
            <label for="NewArrival" class="text-gray-600 font-semibold"
              >New Arrival</label
            >
          </div>
        </section>

        <!-- Image Upload with Preview -->

        <section class="mb-6">
          <h2 class="text-xl font-semibold mb-4">Product Images</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <input
                type="file"
                name="image"
                id="image1"
                accept="image/*"
                class="hidden"
                onchange="showPreview(this, 'preview1')"
              />
              <label
                for="image1"
                class="block cursor-pointer text-center p-4 border border-dashed border-gray-300 rounded-lg"
              >
                <p class="text-gray-500">Select Image 1</p>
                <img
                  id="preview1"
                  src="#"
                  alt="Image Preview"
                  class="w-full mt-2 hidden"
                />
              </label>
            </div>
            <div>
              <input
                type="file"
                name="image"
                id="image2"
                accept="image/*"
                class="hidden"
                onchange="showPreview(this, 'preview2')"
              />
              <label
                for="image2"
                class="block cursor-pointer text-center p-4 border border-dashed border-gray-300 rounded-lg"
              >
                <p class="text-gray-500">Select Image 2</p>
                <img
                  id="preview2"
                  src="#"
                  alt="Image Preview"
                  class="w-full mt-2 hidden"
                />
              </label>
            </div>
            <div>
              <input
                type="file"
                name="image"
                id="image3"
                accept="image/*"
                class="hidden"
                onchange="showPreview(this, 'preview3')"
              />
              <label
                for="image3"
                class="block cursor-pointer text-center p-4 border border-dashed border-gray-300 rounded-lg"
              >
                <p class="text-gray-500">Select Image 3</p>
                <img
                  id="preview3"
                  src="#"
                  alt="Image Preview"
                  class="w-full mt-2 hidden"
                />
              </label>
            </div>
          </div>
        </section>

        <!-- Submit Button -->
        <div class="text-center mt-8">
          <button
            type="submit"
            class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none"
          >
            Add Product
          </button>
        </div>
      </form>
    </div>

    <!-- JavaScript for Image Preview -->
    <script>
      function showPreview(input, previewId) {
        const preview = document.getElementById(previewId);
        const file = input.files[0];

        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            preview.src = e.target.result;
            preview.classList.remove("hidden");
          };
          reader.readAsDataURL(file);
        }
      }
    </script>
  </body>
</html>
